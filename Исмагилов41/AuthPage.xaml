<Page x:Class="Исмагилов41.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Исмагилов41"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="Авторизация" FontFamily="Comic Sans MS">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Логин" 
                   FontSize="18" 
                   Grid.Row="0" Grid.Column="0" 
                   VerticalAlignment="Center" 
                   Margin="10"/>
        <TextBox Name="LoginTB" 
                 Width="200" Height="25" FontSize="16" 
                 Grid.Row="0" Grid.Column="1" 
                 Margin="10"/>

        <TextBlock Text="Пароль" 
                   FontSize="18" 
                   Grid.Row="1" Grid.Column="0" 
                   VerticalAlignment="Center" 
                   Margin="10"/>
        <TextBox Name="PassTB" 
                 Width="200" Height="25" FontSize="16" 
                 Grid.Row="1" Grid.Column="1" 
                 Margin="10"/>

        <Button Content="Войти как гость" 
                Name="LoginGuestBtn" 
                FontSize="16" 
                Width="150" Height="40"
                Grid.Row="2" Grid.Column="0" 
                HorizontalAlignment="Right"
                Margin="10" 
                Click="LoginGuestBtn_Click"/>

        <Button Content="Войти" 
                Name="LoginBtn" 
                FontSize="16" 
                Width="100" Height="40"
                Grid.Row="2" Grid.Column="1" 
                HorizontalAlignment="Left"
                Margin="10" 
                Click="LoginBtn_Click"/>

        <Grid Grid.Row="3" Grid.ColumnSpan="2" 
              x:Name="CaptchaPanel" 
              Visibility="Collapsed"
              Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Введите капчу:" 
                       FontSize="16" 
                       HorizontalAlignment="Center" 
                       Grid.Row="0" Margin="0,0,0,5"/>

            <TextBox x:Name="CaptchaInput" 
                     Width="100" 
                     HorizontalAlignment="Center"
                     Grid.Row="1" 
                     Margin="0,5,0,10"/>

            <Border Grid.Row="2"
                    HorizontalAlignment="Center"
                    BorderBrush="Black" 
                    BorderThickness="0,1,0,1" 
                    Padding="5,0">
                <TextBlock Name="CaptchaText" 
                           FontSize="22" 
                           FontWeight="Bold"
                           TextDecorations="Strikethrough"
                           Margin="10,0"
                           HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Page>
